<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Com.my.Dao.UserLogin">
 
<!--登录 -->
 <select id="Login"   parameterType="Customer" resultType="Customer">
 select * from userinfo  where  username =#{username} and password=#{password}
 </select>
 
 
<!-- 注册  -->
<select id="FindUser"  parameterType="Customer"
 resultType="Customer">
 select id from userinfo where username=#{username}
 </select>
 
 <insert id="InsertUsers1"   parameterType="Customer" >
 insert into userinfo(username,password) values(#{username},#{password})
 </insert>
 
 <insert id="InsertUsers2" parameterType="Users" >
 insert into s_userinfo(userid,s_number,s_sex,workfor) values(#{userid},#{s_number},#{s_sex},#{workfor}) 
 </insert>
</mapper>